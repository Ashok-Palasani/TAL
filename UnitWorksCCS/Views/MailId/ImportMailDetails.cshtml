@{
    ViewBag.Title = "ImportMailDetails";
}

<link href="~/css/fileinput.css" rel="stylesheet" />
<link href="~/css/fileinput.min.css" rel="stylesheet" />
@using (Html.BeginForm("ImportMailDetails", "MailId", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="clearfix" >
        @*<div class="fluid">*@
            <div class="x_fixed_panel" >
                <div class="x_title" style="margin-left:60px; height:30px; color:white;">
                        Import Mail Details  from Excel
                </div>
                <!-- /widget-header -->
                <div class="x_content" >
                    <label for="input-1" class="stacked-label" style="resize: horizontal; margin-left:60px; width: 40%">Select Excel File</label>
                    <input id="file" name="file" type="file" accept="xlsx/*" data-show-upload="false" data-show-remove="false" required="required"  style="margin-left:60px;" class="ui-button-icon-primary">

                    <div style="width: 3%; display: inline-block; height: inherit"></div>
                    @Html.ActionLink(" Back ", "Index", new { }, new { @class = "btn stacked-input fa fa-reply btn-aqua fa-1x", @style = "text-decoration:none;display:inline-block" })
                    <div style="width: 20%; display: inline-block; height: inherit"></div>
                    <input type="submit" value="Upload" class="ui-button-icon-primary" style="display: inline-block;color:white;background-color:#ea4335; margin-top: 3%; width: 30%;font-size:1.2vw" />

                </div>
                <!-- /widget-content -->
            </div>
            <!-- /widget -->
        @*</div>*@
    </div>
}
<script src="~/js/jquery-2.1.4.min.js"></script>
@*<script src="~/js/bootstrap.min.js"></script>*@
<script src="~/js/fileinput.js"></script>
<script src="~/js/fileinput.min.js"></script>
<script>
    /* Initialize your widget via javascript as follows */
    $("#file").fileinput({
        previewFileType: "xlsx",
        allowedFileExtensions: ["xls","xlsx"],          //validate
        maxFileSize: 4000,                                              //maxFileSize in KB's
        browseClass: "btn btn-primary btn-md",
        browseLabel: "Select Excel File",
        browseIcon: '<i class="fa fa-file-excel-o"></i>',
        previewClass: "bg-warning",
        msgInvalidFileExtension: "Select Only (xls or xlsx) Formats."
    });
</script>
